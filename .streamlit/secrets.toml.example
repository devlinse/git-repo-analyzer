# Example secrets configuration file
# Copy this to secrets.toml and fill in your actual API keys
# NEVER commit secrets.toml to version control!

# GitHub Configuration
github_token = "ghp_your_github_personal_access_token_here"
github_username = "your_github_username"

# OpenAI Configuration
openai_api_key = "sk-your_openai_api_key_here"

# Google AI Configuration
google_ai_api_key = "your_google_ai_api_key_here"

# Azure OpenAI Configuration
azure_openai_api_key = "your_azure_openai_api_key_here"
azure_openai_endpoint = "https://your-resource.openai.azure.com/"

# BitBucket Configuration
bitbucket_username = "your_bitbucket_username"
bitbucket_app_password = "your_bitbucket_app_password"

# Azure DevOps Configuration
azure_devops_organization = "your_azure_devops_organization"
azure_devops_pat = "your_azure_devops_personal_access_token"

# Application Configuration (optional overrides)
[app]
environment = "development"
debug = true
log_level = "DEBUG"

# Analysis Configuration (optional overrides)
[analysis]
max_repo_size_mb = 1000
clone_timeout_seconds = 600
analysis_timeout_seconds = 300
max_files_to_analyze = 2000

# Security Configuration (optional overrides)
[security]
mask_secrets_in_logs = true
require_https = true
max_token_length = 1000